{% extends "layout.twig" %} 

{% block body %}

<body class="bg-dark">
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Ajouter / Modifier un apprenant</div>
            <div class="card-body">
                <form>
                <div class="form-group" style="display:none;">
                        <div class="form-row">
                            <label for="lastname">Id</label>
                            <input class="form-control" id="learnerId" type="text" name="learnerId" placeholder="learnerId">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="lastname">Nom</label>
                                <input class="form-control" id="lastname" type="text" name="lastname" aria-describedby="nameHelp" placeholder="Nom">
                            </div>
                            <div class="col-md-6">
                                <label for="firstname">Prénom</label>
                                <input class="form-control" id="firstname" type="text" name="firstname" aria-describedby="nameHelp" placeholder="Prénom">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="mail">Email</label>
                                <input class="form-control" id="mail" type="email" name="mail" aria-describedby="emailhelp" placeholder="Email">
                            </div>
                            <div class="col-md-6">
                                <label for="phonenumber">Téléphone</label>
                                <input class="form-control" id="phonenumber" type="text" name="phonenumber" aria-describedby="phonenumberhelp" placeholder="Téléphone">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="formation">Formation</label>
                        <select name="formation" id="formation">
                            {% for formation in formationList %}
                                <option value="{{ formation.idformation }}">{{ formation.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="start_date">Date de début</label>
                                <select name="start_date" id="start_date" name="start_date">
                                    
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="end_date">Date de fin</label>
                                <select name="end_date" id="end_date" name="end_date">
                                   
                                </select>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-block" href="">Ajouter / Modifier</a>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="{{ path('addformation') }}">Ajouter une formation</a>
                </div>
            </div>
        </div>
    </div>
</body>

{% endblock %}
{% block js %}
{{ parent() }}

<script src='/js/addlearner.js'></script>
{% endblock %}