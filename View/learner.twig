{% extends "layout.twig" %}

{% block body %} 


    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Apprenants</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Email</th>
                                <th>Formation</th>
                                <th>Date de debut</th>
                                <th>Date de fin</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Email</th>
                                <th>Formation</th>
                                <th>Date de debut</th>
                                <th>Date de fin</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {% for learner in learnersList %}
                                <tr>
                                    <td>{{ learner.lastname }}</td>
                                    <td>{{ learner.firstname }}</td>
                                    <td>{{ learner.mail }}</td>
                                    <td>{{ learner.name }}</td>
                                    <td>{{ learner.start_date|date('d/m/Y') }}</td>
                                    <td>{{ learner.end_date|date('d/m/Y') }}</td>
                                    <td><a href="">Modifier</a></td>
                                </tr> 
                            {% endfor %}  
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
{% endblock %}