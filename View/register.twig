{% extends "layout.twig" %}

{% block body %} 


    <body class="bg-dark">
        <div class="container">
            <div class="card card-register mx-auto mt-5">
                <div class="card-header text-center">Enregistrez un administrateur</div>
                <div class="card-body">
                    <form method="POST" action="{{ path('saveregister') }}">
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label >Nom</label>
                                    <input name="name" class="form-control"  type="text" aria-describedby="nameHelp" placeholder="Entrez votre nom">
                                </div>
                                <div class="col-md-6">
                                    <label >Numeros de telephone</label>
                                    <input name="phonenumber" class="form-control"  type="text" aria-describedby="nameHelp" placeholder="Entrez votre numeros de téléphone">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label >Addresse Mail</label>
                            <input class="form-control"  type="email" aria-describedby="emailHelp" placeholder="Enter email" name="mail" >
                        </div>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label >Mot de Passe</label>
                                    <input class="form-control"  type="password" placeholder="Password" id="password" name="_password">
                                </div>
                                <div class="col-md-6">
                                    <label >Confirmez votre Mot de Passe</label>
                                    <input class="form-control"  type="password" placeholder="Confirm password"id="password2" name="password2">
                                </div>
                            </div>
                        </div>
                        <input class="btn btn-success text-center" type="submit" value="Validez">
                    </form>

                </div>
            </div>
        </div>

    </body>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="web/js/password.js" type="text/javascript"></script>
{% endblock %}

