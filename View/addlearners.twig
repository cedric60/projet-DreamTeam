<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>SB Admin - Start Bootstrap Template</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">

        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

        <link href="/css/sb-admin.css" rel="stylesheet">
    </head>


{% block body %}

<body class="bg-dark">
    <div class="container-fluid">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Ajouter un apprenant</div>
            <div class="card-body">
                <form method="POST" action="{{ path('savelearners') }}" id="saveLearnerForm">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="lastname">Nom</label>
                                <input class="form-control" id="lastname" type="text" name="lastname" aria-describedby="nameHelp" placeholder="Nom" value="">
                                <br /><span id="erreurlastname"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="firstname">Prénom</label>
                                <input class="form-control" id="firstname" type="text" name="firstname" aria-describedby="nameHelp" placeholder="Prénom" value="">
                                <br /><span id="erreurfirstname"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="mail">Email</label>
                                <input class="form-control" id="mail" type="email" name="mail" aria-describedby="emailhelp" placeholder="Email" value="">
                                <br /><span id="erreurmail"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="phonenumber">Téléphone</label>
                                <input class="form-control" id="phonenumber" type="text" name="phonenumber" aria-describedby="phonenumberhelp" placeholder="Téléphone" value=""><br /><span id="erreurphone"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="formation">Formation</label><br>
                        <select name="formation" id="formation">
                                    <option value="0" selected="selected">Veuillez sélectionner une formation</option>
                            {% for formation in formationList %}
                                    <option value="{{ formation.idformation }}">{{ formation.name }}</option>
                            {% endfor %}
                        </select>
                        <br /><span id="erreurformation"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div>
                                <label for="start_date">Session</label><br>
                                <select name="session" id="session">
                                    <option value="0" selected="selected">Veuillez sélectionner une session</option>
                                </select>
                                <br /><span id="erreursession"></span>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit" id="button" href="{{ path('savelearners') }}">Ajouter</button>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="{{ path('addformation') }}">Ajouter une formation</a>
                </div>
                <a class="btn btn-danger btn-sm" href="{{ path('learners') }}">Retour</a>
            </div>
        </div>
    </div>
</body>

{% endblock %}
<!-- Bootstrap core JavaScript-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" ></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js"></script>
    <script src='/js/addlearner.js'></script>
